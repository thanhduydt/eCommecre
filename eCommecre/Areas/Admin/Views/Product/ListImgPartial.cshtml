<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Thứ tự</th>
                <th scope="col">Hình</th>
                <th scope="col">Thao tác</th>

            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ListImg != null)
            {
                foreach (var item in ViewBag.ListImg)
                {
                    if (item.Id>-1) {
            <tr>
                <th scope="row"><input id="@item.Id" onkeyup="editItemInListImg(@item.Id)" value="@item.ImageModel.Order" /></th>
                <td><img style="width:50px; height:50px;" src="~/Admin/dist/img/product/@item.ImageModel.Url"><td>
                <td>
                    <a class="btn btn-danger btn-xs" onclick="deleteItemInListImg(@item.Id)">Xóa <i title="Xóa" class="fas fa-trash-alt"></i></a>
                    
                </td>
            </tr>
                    }
                } }
        </tbody>
    </table>
</div>